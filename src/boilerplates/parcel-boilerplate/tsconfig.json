{
  "compilerOptions": {
    "module": "ES2022",
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "outDir": "./dist/",
    "target": "ES6",
    "sourceMap": false,
    "noImplicitAny": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~*": ["./*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
